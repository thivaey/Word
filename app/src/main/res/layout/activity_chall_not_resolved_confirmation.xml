<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ChallNotResolvedConfirmationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Challenge Not \n Resolved"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/tealSecondary"
            android:textSize="30sp"
            android:paddingTop="75dp"
            android:paddingBottom="75dp"
            android:layout_marginBottom="150dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This action will lower your credibility score from 4.7 to 4.2 \n\n Do you wish to continue?"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/tealSecondary"

            android:paddingTop="75dp"
            android:paddingBottom="75dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/challNotResolvedContinue_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="100dp"
                android:text="Continue"/>
            <Button
                android:id="@+id/challNotResolvedBack_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/grey"
                android:textColor="@color/black"
                android:layout_marginRight="50dp"
                android:text="Back"/>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>